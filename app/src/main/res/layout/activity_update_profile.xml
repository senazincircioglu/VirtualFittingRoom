<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateProfile">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/activitiesbackground">
        <LinearLayout
            android:background="@android:color/holo_purple"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <Button
                android:id="@+id/btn_back"
                android:drawableLeft="@drawable/backarrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent" />
            <View
                android:layout_width="40dp"
                android:layout_height="0dp" />
            <TextView
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Profile"
                android:textColor="@android:color/black"
                android:textSize="25dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal Information"
            android:textSize="30dp"
            android:textColor="@android:color/black"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:background="@android:color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="User Name:"
            android:textColor="@android:color/black"
            android:textSize="22dp"/>
        <EditText
            android:id="@+id/edt_userName"
            android:hint="Enter user name"
            android:textColorHint="#434343"
            android:textColor="@android:color/black"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:inputType="text"/>
        <TextView
            android:textColor="@android:color/black"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="22dp"/>
        <EditText
            android:id="@+id/edt_password"
            android:hint="Enter password"
            android:textColorHint="#434343"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:inputType="text"/>
        <TextView
            android:textColor="@android:color/black"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-mail:"
            android:textSize="22dp"/>
        <EditText
            android:id="@+id/edt_email"
            android:hint="sample@gmail.com"
            android:textColorHint="#434343"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:inputType="textEmailAddress"/>
        <TextView
            android:textColor="@android:color/black"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age:"
            android:textSize="22dp"/>
        <EditText
            android:textColorHint="#434343"
            android:id="@+id/edt_age"
            android:hint="Enter your age"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:inputType="number"/>
        <TextView
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender:"
            android:textColor="@android:color/black"
            android:textSize="22dp"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/rGroup_gender">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:id="@+id/rBtn_female"
                android:checked="true"/>
            <View
                android:layout_width="50dp"
                android:layout_height="0dp"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:id="@+id/rBtn_male"/>
        </RadioGroup>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Body Sizes"
            android:textSize="30dp"
            android:textColor="@android:color/black"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:background="@android:color/black"/>
        <TextView
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upper Body"
            android:textColor="@android:color/black"
            android:textSize="22dp"/>
<Spinner
    android:id="@+id/upperbody"
    android:layout_width="200dp"
    android:layout_height="30dp"/>
        <TextView
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lower Body"
            android:textColor="@android:color/black"
            android:textSize="22dp"/>
        <Spinner
            android:id="@+id/lowerbody"
            android:layout_width="200dp"
            android:layout_height="30dp"/>
        <LinearLayout
            android:paddingTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
        <Button
            android:id="@+id/btn_Save"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/allbutton"
            android:text="Save"/>
            <View
                android:layout_width="20dp"
                android:layout_height="0dp"/>
        <Button
            android:background="@drawable/allbutton"
            android:id="@+id/btn_Cancel"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Cancel"/>
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>