<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/mainmenubackground"
        android:orientation="vertical"
        android:padding="15dp">
        <Button
            android:id="@+id/btn_mainToProfile"
            android:text="Profile"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="138dp"
            android:background="@drawable/button1"
            android:drawableLeft="@drawable/profile"
            android:padding="30dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <Button
            android:id="@+id/btn_mainToStores"
            android:text="Stores"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="138dp"
            android:background="@drawable/button1"
            android:drawableLeft="@drawable/stores"
            android:padding="30dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <Button
            android:id="@+id/btn_ToWardrobe"
            android:text="Wardrobe"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="138dp"
            android:background="@drawable/button1"
            android:drawableLeft="@drawable/wardrobe"
            android:padding="30dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>


        <Button
        android:id="@+id/btn_mainToModel"
        android:text="Virtual Model"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="138dp"
        android:background="@drawable/button1"
        android:drawableLeft="@drawable/vm"
        android:padding="30dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <Button
            android:id="@+id/btn_mainToBarcode"
            android:text="Barcode Reader"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="138dp"
            android:background="@drawable/button1"
            android:drawableLeft="@drawable/barcode"
            android:padding="30dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>