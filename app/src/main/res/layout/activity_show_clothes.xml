<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".showClothes">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/activitiesbackground">
    <LinearLayout
        android:background="@android:color/holo_purple"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
            android:id="@+id/btn_backMain"
            android:drawableLeft="@drawable/backarrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent" />
        <View
            android:layout_width="40dp"
            android:layout_height="0dp"/>
        <TextView
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Clothes"
            android:textColor="@android:color/black"
            android:textSize="25dp"/>
    </LinearLayout>
    <ImageView
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:src="@drawable/clothes"
        android:id="@+id/clothes"
         />
    <GridLayout
        android:paddingLeft="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="3"
        android:columnCount="2">
        <TextView
            android:text="Product Name:"
            android:textSize="20dp"
            android:textColor="@android:color/black"/>
        <TextView
            android:textSize="20dp"
            android:id="@+id/name"/>
        <TextView
            android:text="Size"
            android:textSize="20dp"
            android:textColor="@android:color/black"/>
        <TextView
            android:textSize="20dp"
            android:id="@+id/size"/>
        <TextView
            android:text="Color:"
            android:textSize="20dp"
            android:textColor="@android:color/black"/>
        <TextView
            android:textSize="20dp"
            android:id="@+id/color"/>
    </GridLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="30dp" />
    <Button
        android:id="@+id/btn_toModel"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/allbutton"
        android:textColor="@color/buttontext"
        android:text="try on the model"
        android:textSize="15dp" />
    <View
        android:layout_width="0dp"
        android:layout_height="20dp"/>

        <Button
            android:id="@+id/btn_backScanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/allbutton"
            android:textColor="@color/buttontext"
            android:text="Scan New Code"
            android:layout_gravity="center"/>




</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>